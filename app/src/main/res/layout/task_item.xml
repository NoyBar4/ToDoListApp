<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="18dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <CheckBox
            android:id="@+id/cb_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:button="?android:attr/listChoiceIndicatorSingle"
            android:ems="12"
            android:text="Task"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cb_title"
            android:layout_alignEnd="@+id/cb_title"
            android:layout_marginTop="10dp"
            android:maxEms="20"
            android:text="Description"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_description"
            android:layout_alignEnd="@+id/tv_description"
            android:layout_marginTop="10dp"
            android:text="No Date"
            android:drawableEnd="@drawable/calender"
            android:drawablePadding="5dp"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/tv_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_description"
            android:layout_alignLeft="@id/tv_date"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="10dp"
            android:drawableEnd="@drawable/tag"
            android:drawablePadding="5dp"
            android:text="Tags: "
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/iv_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/cb_title"
            android:src="@drawable/flag4" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>