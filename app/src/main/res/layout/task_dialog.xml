<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/ed_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:button="?android:attr/listChoiceIndicatorSingle"
        android:ems="15"
        android:hint="Task"
        android:textColor="#000000"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/ed_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ed_title"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ed_title"
        android:hint="Description"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/ed_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ed_title"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ed_description"
        android:hint="No Date"
        android:drawableEnd="@drawable/calendar3"
        android:drawablePadding="10dp"
        android:textSize="15dp" />

    <ImageButton
        android:id="@+id/ib_calender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ed_date"
        android:layout_alignEnd="@+id/ed_title"
        android:layout_marginTop="10dp"
        android:background="#00FBFBFB"
        android:src="@drawable/alarm" />

    <ImageButton
        android:id="@+id/ib_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ed_date"
        android:layout_marginTop="10dp"
        android:background="#00FBFBFB"
        android:layout_toRightOf="@id/ib_calender"
        android:layout_marginLeft="20dp"
        android:src="@drawable/flag" />

    <ImageButton
        android:id="@+id/ib_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ed_date"
        android:layout_marginTop="10dp"
        android:background="#00FBFBFB"
        android:layout_toRightOf="@id/ib_flag"
        android:layout_marginLeft="20dp"
        android:src="@drawable/delete" />

    <ImageButton
        android:id="@+id/ib_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ed_date"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/ib_delete"
        android:layout_marginLeft="100dp"
        android:background="#00FBFBFB"
        android:src="@drawable/send" />

</RelativeLayout>